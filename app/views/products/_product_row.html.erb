<div class="panel panel-default">
  <div class="panel-heading">
  	<h2><%= product.title %> </h2>
  </div>
  <div class="panel-body">
    <div class ="row">
      <div class="col-md-6">
        <img src="<%=product.image_url %>" class="img-responsive" width="100" height="100">
      </div>
      <div class="col-md-6">
        <h3>Price:<%=number_to_currency product.price %></h3>
      </div>
      <%= link_to 'Add to cart', shopping_cart_path(:product_id => product), :method => 'POST', remote: true, :class => "btn btn-primary" %>
    </div>
  </div>
</div>
 
