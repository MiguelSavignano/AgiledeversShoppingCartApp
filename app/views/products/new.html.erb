<h1>New Product</h1>
<div class="row">
  <div class="col s5 offset-s4 ">
      <h4 class="header card-panel pink darken-3"><span class="white-text text-darken-2">New product</span></h4>
      <div class="card-panel indigo lighten-5">
      <%= form_for @product, html: { multipart: true } do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :price %>
      <%= f.text_field :price %>
      	<div class="file-field input-field">
            <%= f.text_field :image_name, class: "file-path validate" %>
      	    <%= f.label :image_url %>
      	    <div class="btn">
          	    <span>File</span>
      	    	<%= f.file_field :image_url %>
      		</div>
      	</div>
      	<%= f.submit "Save", class: "btn" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Back', products_path %>
